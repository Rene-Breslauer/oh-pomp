<div class="relative 
  xl:h-screen 
  min-h-[75vh]
  bg-flash
  xl:bg-transparent
  flex
  items-center
  justify-center
  xl:justify-end">
  
  <div class="px-8 xl:px-0 w-full max-w-[38rem] xl:mr-[19%]">
    <h1 class="text-5xl text-center">
      {{ 'customer.reset_password.title' | t }}
    </h1>
    
    <p class="text-lg mt-5 tracking-normal text-center">
      {{ 'customer.reset_password.subtext' | t: email: email }}
    </p>
    
    <div class="mt-16">
    	{%- form 'reset_customer_password', novalidate: 'novalidate' -%}
      		{%- if form.errors -%}
      			<div class="px-6 py-4 border border-primary mb-4" tabindex="-1" autofocus>
                  <ul>
                    {%- for field in form.errors -%}
                      <li>
                        {%- if field == 'form' -%}
                          {{ form.errors.messages[field] }}
                        {%- else -%}
                          <a href="#{{ field }}">
                            {{ form.errors.translated_fields[field] | capitalize }}
                            {{ form.errors.messages[field] }}
                          </a>
                        {%- endif -%}
                      </li>
                    {%- endfor -%}
                  </ul>
      			</div>
      		{%- endif -%}
      		
      		<div class="field">
              <input
                class="field__input"
                type="password"
                name="customer[password]"
                id="password"
                autocomplete="new-password"
                {% if form.errors contains 'password' %}
                  aria-invalid="true"
                  aria-describedby="password-error"
                {% endif %}
                placeholder="{{ 'customer.reset_password.password' | t }}"
              >
              <label class="field__label" for="password">
                {{ 'customer.reset_password.password' | t }}
              </label>
      		</div>
      
      		<div class="field mt-4">
              	<input
                  class="field__input"
                  type="password"
                  name="customer[password_confirmation]"
                  id="password_confirmation"
                  autocomplete="new-password"
                  {% if form.errors contains 'password_confirmation' %}
                    aria-invalid="true"
                    aria-describedby="password_confirmation-error"
                  {% endif %}
                  placeholder="{{ 'customer.reset_password.password_confirm' | t }}"
                >
                <label class="field__label" for="password_confirmation">
                  {{ 'customer.reset_password.password_confirm' | t }}
                </label>
      		</div>
      
      		<button class="mt-4 btn w-full">
                {{ 'customer.reset_password.submit' | t }}
            </button>
      	{%- endform -%}
    </div>
  </div>
  
  {%- if settings.account_image -%}
    <div class="hidden xl:block">
    	{%- render 'img', image: settings.account_image -%}
	</div>
  {%- endif -%}
</div>