{%- if section.settings.title != blank -%}
	{%- liquid
        assign padding_top = section.settings.padding_top | default: 0
        assign padding_bottom = section.settings.padding_bottom | default: 0
        assign margin_top = section.settings.margin_top | default: 0
        assign margin_bottom = section.settings.margin_bottom | default: 0
        assign quote = section.settings.title
        assign image = section.settings.image
    -%}

	{%- render 'offset' 
        id: section.id
        padding_top: padding_top, 
        padding_bottom: padding_bottom,
        margin_top: margin_top,
        margin_bottom: margin_bottom
    -%}
	
    <section id="section-{{ section.id }}">
        <div class="page-width">
            <div class="max-w-screen-2xl 
                mx-auto 
                relative
                py-12 
                xl:py-40">
                <div class="max-w-screen-md mx-auto">
                    <div class="flex justify-center items-center mb-8 xl:mb-16">
                        {%- render 'icon-quote' -%}
                    </div>
                    <blockquote class="text-5xl 
                        xl:text-6xl 
                        font-bold 
                        uppercase 
                        leading-none
                        text-center">
                        {{ quote }}
                    </blockquote>
                </div>

                {%- if image -%}
                    {%- render 'img', image: image -%}
                {%- endif -%}
            </div>
        </div>
    </section>
{%- endif -%}

{% schema %}
{
  "name": "Quote",
  "settings": [
	{
      "type": "number",
      "id": "padding_top",
      "label": "Padding top (rem)",
      "default": 0,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding bottom (rem)",
      "default": 0,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "Margin top (rem)",
      "default": 100,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "margin_bottom",
      "label": "Margin bottom (rem)",
      "default": 100,
      "info": "1rem = 10px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Quote"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets":[
    {
    	"name": "Quote"
    }
  ]
}
{% endschema %}