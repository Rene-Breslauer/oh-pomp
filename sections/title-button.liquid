{%- liquid
  assign padding_top = section.settings.padding_top | default: 0
  assign padding_bottom = section.settings.padding_bottom | default: 0
  assign margin_top = section.settings.margin_top | default: 0
  assign margin_bottom = section.settings.margin_bottom | default: 0
  assign heading = section.settings.title
  assign button_label = section.settings.button_label | escape
  assign button_link = section.settings.button_link
-%}

{%- render 'offset' 
  id: section.id
  padding_top: padding_top, 
  padding_bottom: padding_bottom,
  margin_top: margin_top,
  margin_bottom: margin_bottom
-%}

<section id="section-{{ section.id }}">
  <div class="page-width">
    {%- if heading != blank -%}
      <h2 class="mb-0
                text-center
                normal-case
                tracking-normal
                text-1xl
                xl:text-3xl
                styled-span">{{ heading }}</h2>
    {%- endif -%}
    
    {%- if button_label != blank
      and button_link != blank -%}
      <div class="mt-6 xl:mt-10 text-center">
        <a class="btn btn--secondary btn--inverted" href="{{ button_link }}">{{ button_label }}</a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Title and Button",
  "settings": [
	{
      "type": "number",
      "id": "padding_top",
      "label": "Padding top (rem)",
      "default": 0,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding bottom (rem)",
      "default": 0,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "Margin top (rem)",
      "default": 100,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "margin_bottom",
      "label": "Margin bottom (rem)",
      "default": 100,
      "info": "1rem = 10px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "text",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets":[
    {
    	"name": "Title and Button"
    }
  ]
}
{% endschema %}