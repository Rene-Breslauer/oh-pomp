{%- if section.settings.title != blank -%}
    {%- liquid
        assign padding_top = section.settings.padding_top | default: 0
        assign padding_bottom = section.settings.padding_bottom | default: 0
        assign margin_top = section.settings.margin_top | default: 0
        assign margin_bottom = section.settings.margin_bottom | default: 0
        assign heading = section.settings.title
        assign subtitle = section.settings.subtitle | escape
        assign note = section.settings.note | escape
        assign image = section.settings.image
        assign spinning_icon = section.settings.icon
    -%}

    {%- render 'offset' 
        id: section.id
        padding_top: padding_top, 
        padding_bottom: padding_bottom,
        margin_top: margin_top,
        margin_bottom: margin_bottom
    -%}

    <section id="section-{{ section.id }}">
        <div class="page-width">
            <div class="xl:max-w-screen-2xl
                xl:mx-auto
                xl:grid
                xl:grid-cols-about
                xl:gap-8
                xl:justify-between">
                <div>
                    <div class="xl:hidden pl-4 -mr-[10.5rem] float-right">
                      {%- render 'spinning-logo' -%}
                    </div>
                    <h1 class="break-words
                        styled-span
                        text-6xl
                        xl:text-9xl
                        mb-0">{{ heading }}</h1>
                </div>
                <div class="mt-8 xl:mt-0">
                    {%- if subtitle != blank -%}
                        <p class="text-1xl
                            xl:text-3xl
                            font-bold
                            tracking-normal">
                            {{ subtitle }}
                        </p>
                    {%- endif -%}

                    {%- if note != blank -%}
                        <p class="text-lg tracking-normal mt-7">
                            {{ note }}
                        </p>
                    {%- endif -%}
                </div>
            </div>
        </div>

        {%- if image -%}
            <div class="relative 
              h-[44rem] 
              xl:h-[90rem] 
              mt-8 
              xl:-mt-[25rem] ">
                {%- render 'img', image: image -%}

                <div class="hidden
                    xl:flex
                    absolute
                    right-[10%]
                    z-10
                    top-full
                    transform
                    -translate-y-1/2">
                    {%- render 'spinning-logo' -%}
                </div>
            </div>
        {%- endif -%}
    </section>
{%- endif -%}

{% schema %}
{
  "name": "About main",
  "settings": [
	{
      "type": "number",
      "id": "padding_top",
      "label": "Padding top (rem)",
      "default": 0,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "padding_bottom",
      "label": "Padding bottom (rem)",
      "default": 0,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "Margin top (rem)",
      "default": 100,
      "info": "1rem = 10px"
    },
    {
      "type": "number",
      "id": "margin_bottom",
      "label": "Margin bottom (rem)",
      "default": 100,
      "info": "1rem = 10px"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "note",
      "label": "Note"
    },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    }
  ],
  "presets":[
    {
    	"name": "About main"
    }
  ]
}
{% endschema %}